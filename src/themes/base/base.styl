LIST_STYLE = lower-roman decimal lower-alpha
MAX_INDENT = 8

makelist(arr)
  unquote('list-' + join(' list-', arr))

.ql-container
  box-sizing: border-box
  cursor: text
  font-family: Helvetica, 'Arial', sans-serif
  font-size: 13px
  height: 100%
  line-height: 1.42
  margin: 0px
  overflow-x: hidden
  overflow-y: auto
  padding: 12px 15px
  position: relative

.ql-paste-manager
  left: -100000px
  position: absolute
  top: 50%

.ql-toolbar
  box-sizing: border-box

.ql-editor
  box-sizing: border-box
  min-height: 100%
  outline: none
  tab-size: 4
  white-space: pre-wrap
  img
    max-width: 100%
  p
    margin: 0
    padding: 0
  p:not(.ql-list-ordered)
    counter-reset: makelist(1..MAX_INDENT)
  .ql-list-bullet:before
    content: '\25CF\00a0'
  .ql-list-bullet:before, .ql-list-ordered:before
    display: inline-block
    margin-left: -40px
    margin-right: 10px
    text-align: right
    width: 30px
  for num in (1..MAX_INDENT)
    .ql-indent-{num}
      padding-left: (40 * num)px
    .ql-list-ordered.ql-indent-{num}
      counter-increment: unquote('list-' + num)
    .ql-list-ordered.ql-indent-{num}:before
      content: unquote('counter(list-' + num + ', ' + LIST_STYLE[num%3] + ')') '. '
    if (num < MAX_INDENT)
      .ql-list-ordered.ql-indent-{num}
        counter-reset: makelist((num+1)..MAX_INDENT)
